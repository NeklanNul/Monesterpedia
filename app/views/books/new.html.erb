
<style>
  
  body {
        background-color: lightblue;
    }
    h1, div {
        text-align: center;
        padding: 3px;
    }
    h1{
        padding-top:100px;
    }
</style>
<h1> Add a Book? </h1>
<%= form_for @book do |f| %>
    <div class="form-group">
        <%= f.text_field :name, placeholder: "Name of the book" %>
    </div>
    <div class="form-group">
        <%= f.text_field :year, placeholder: "Year of release" %>
    </div>
   <div class="form-group">
    <%= "Genre:" %>
        <%= f.select :genre, ["Mystery", "Thriller", "Horror", "Science Fiction", "Fantasy"]%>
    </div>
     <div class="form-group">
      <%= "Author:" %>
        <%= f.select :author_id, options_from_collection_for_select(@author, "id", "name") %> 
    </div>
    <div class="form-group"> 
        <%= f.submit class: "btn btn-block btn-success" %>
    </div>  
<% end %>
<%= link_to "Back", "browsebook" %>