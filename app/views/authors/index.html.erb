<style>
    body {
        background-color: #85FFAD;
    }
    table {
        margin-left: auto;
        margin-right: auto;
        border: 1px solid black;
    }
    th, td{
        border: 1px solid black;
        padding: 10px;
    }
    h1, h2{
        text-align: center;
        padding: 3px;
    }
    tr:nth-child(even) {
        background-color: #D3D3D3;
    }
    tr:nth-child(odd) {
        background-color: white;
    }
</style>


<h1> Browse Authors? </h1>
<h2> You wanna browse Authors? </h2>
<% @authors = Author.all %>

  <table>

    <thead>
     <tr>
        <th>Name</th>
        <th>Nationality</th>
        <th>Age</th>
        <th>Alive?</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
  <tbody>
   <% @authors.each do |author| %>
     <tr>
      <td><%= author.name %></td>
      <td><%= author.nationality %></td>
      <td><%= author.age %></td>
      <td><%= author.alive %></td>
      <td><%= button_to "Edit", "editauth", method: :get , params:{id: author.id} %></td>     
      <td><%= button_to "Delete", "delauth", method: :post , params:{id: author.id} %></td> 
    </tr>
   <% end %>
  </tbody>