
<style>
    body {
        background-color: #FFCCCB;
    }
    h1, div {
        length:50%;
        text-align: center;
        padding: 3px;
     
    }
    h1{
        padding-top:100px;
    }
</style>
<h1> Add a Monster </h1>
<%= form_for @monster do |f| %>
    <div class="form-group"  >
        <%= f.text_field :name, :size=>"50", placeholder: "The name of the Monster" %>
    </div>
    <div class="form-group">
        <%= f.text_field :origin, :size=>"50", placeholder: "The origin of the Monster" %>
    </div>
    <div class="form-group">
        <%= f.text_area :description, :size=>"50", placeholder: "The description of the Monster" %>
    </div>
    <div class="form-group">
      <%= "Book:" %>
        <% book = Book.find_by_id(@monster.book_id) %> 
        <%= f.select :book_id, options_from_collection_for_select(@book, "id", "name")%> 
    </div>
    <div class="form-group"> 
        <%= f.submit class: "btn btn-block btn-success" %>
    </div>  
<% end %>

<%= link_to "Back", "browsebook" %>