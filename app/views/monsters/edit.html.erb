<style>
  
    h1, div {
        text-align: center;
        padding: 3px;
    }
    h1{
        padding-top:100px;
    }
</style>
<h1> Edit a Monster </h1>
<%= form_for @monster do |f| %>
    <div class="form-group">
        <%= f.text_field :name, placeholder: @monster.name %>
    </div>
    <div class="form-group">
        <%= f.text_field :origin, placeholder: @monster.origin %>
    </div>
    <div class="form-group">
        <%= f.text_field :description, placeholder: @monster.description %>
    </div>
    <div class="form-group">
      <%= "Book:" %>
        <% book = Book.find_by_id(@monster.book_id) %> 
        <%= f.select :book_id, options_from_collection_for_select(@book, "id", "name"), placeholder: book.name %> 
    </div>
    <div class="form-group"> 
        <%= f.submit class: "btn btn-block btn-success" %>
    </div>  
<% end %>

